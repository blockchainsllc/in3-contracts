{
  "extends": "solhint:all",
  "rules": {
    "indent": [
      "error",
      4
    ],
    "bracket-align": "off",
    "max-line-length": [
      "error",
      140
    ],
    "mark-callable-contracts": "off",
    "function-max-lines": [
      "error",
      70
    ],
    "visibility-modifier-order": "error",
    "func-order": "error",
    "reason-string": "off"
  }
}